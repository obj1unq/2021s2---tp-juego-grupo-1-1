import wollok.game.*
import personajes.*
import complementos.*
import inicio.*


describe "Pokemon test" {

  method initialize(){
    game.clear()
    game.addVisual(charmander)
  }

  test "Baya sube energia, trampa baja" {
    charmander.meEncontro(new Trampa(position = game.at(7,6), image = "trampa.png", energiaQueBrinda = -15, defensaQueBrinda = -15))
    assert.equals(85,charmander.energia())
    assert.equals(85,charmander.defensa())
  }
}